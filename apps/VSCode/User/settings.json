{
	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[javascript]": {
		/* "editor.defaultFormatter": "oxc.oxc-vscode" */
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[typescript]": {
		/* "editor.defaultFormatter": "esbenp.prettier-vscode" */
		/* "editor.defaultFormatter": "oxc.oxc-vscode" */
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[xml]": {
		"editor.defaultFormatter": "redhat.vscode-xml"
	},

	"breadcrumbs.symbolSortOrder": "name",

	"chat.agent.enabled": false,
	"chat.commandCenter.enabled": false,
	"chat.disableAIFeatures": true,
	"chat.mcp.access": "none",

	"colorInfo.languages": [
		{
			"selector": "css",
			"colors": "css"
		},
		{
			"selector": "json",
			"colors": "hex"
		},
		{
			"selector": "less",
			"colors": "css"
		},
		{
			"selector": "sass",
			"colors": "css"
		},
		{
			"selector": "scss",
			"colors": "css"
		},
		{
			"selector": "xml",
			"colors": "css"
		}
	],

	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.maxComputationTime": 0,
	"diffEditor.renderSideBySide": true,

	"editor.acceptSuggestionOnEnter": "off",
	"editor.codeLens": false,
	"editor.defaultColorDecorators": "always",
	/* "editor.defaultFormatter": "esbenp.prettier-vscode", */
	"editor.find.seedSearchStringFromSelection": "selection",
	"editor.fontFamily": "'0xProto Nerd Font', 'FiraCode Nerd Font', 'Fira Code', Consolas, 'Courier New', monospace",
	"editor.fontLigatures": true,
	/* "editor.formatOnPaste": true, */
	/* "editor.formatOnSave": true, */
	"editor.insertSpaces": false,
	"editor.lineHeight": 1.5,
	"editor.minimap.showSlider": "always",
	"editor.renderWhitespace": "boundary",
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 800,

	"explorer.autoReveal": "focusNoScroll",
	"explorer.openEditors.minVisible": 10,
	"explorer.openEditors.visible": 10,
	
	"emmet.includeLanguages": {
		"twig": "html"
	},

	"extensions.experimental.affinity": {
		"asvetliakov.vscode-neovim": 1,
		"bmewburn.vscode-intelephense-client": 1,
		"dbaeumer.vscode-eslint": 1,
		"DEVSENSE.composer-php-vscode": 1,
		"DEVSENSE.intelli-php-vscode": 1,
		"DEVSENSE.phptools-vscode": 1,
		"DEVSENSE.profiler-php-vscode": 1,
		"eamodio.gitlens": 1,
		"esbenp.prettier-vscode": 1,
		"Gruntfuggly.todo-tree": 1,
		"kgz.mago-unofficial": 1,
		"kokororin.vscode-phpfmt": 1,
		"ms-vscode-remote.remote-wsl": 1,
		"oxc.oxc-vscode": 1,
		"prettier.prettier-vscode": 1,
		"st-pham.php-refactor-tool": 1,
		"vsls-contrib.gistfs": 1,
	},
	"extensions.ignoreRecommendations": true,
	
	"files.associations": {
		"*bashrc": "shellscript",
		"*.bash*": "shellscript",
		"*caddyfile": "ini",
		"*.curlrc": "shellscript",
		"*.env.example": "properties",
		"*.icls": "xml",
		"*inputrc": "shellscript",
		"*.module": "php",
		"*nanorc": "shellscript",
		"*profile": "shellscript",
		"*.wsb": "xml"
	},
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 3000,
	"files.eol": "\n",

	"gistpad.mcp.enabled": false,

	"git.openRepositoryInParentFolders": "never",

	"gitlens.hovers.currentLine.details": false,
	"gitlens.hovers.currentLine.over": "line",
	"gitlens.codeLens.enabled": false,
	"gitlens.defaultDateLocale": "en-CA",
	"gitlens.defaultDateShortFormat": null,
	"gitlens.defaultDateFormat": null,
	"gitlens.home.preview.enabled": false,
	"gitlens.plusFeatures.enabled": false,
	"gitlens.telemetry.enabled": false,
	"gitlens.views.commitDetails.files.layout": "tree",
	"gitlens.views.stashes.files.layout": "tree",

	"html.autoClosingTags": false,
	"html.hover.documentation": false,
	"html.hover.references": false,
	"html.suggest.html5": false,

	"intelephense.environment.phpVersion": "8.4.15",
	"intelephense.format.enable": false,

	"mago.path": "C:\\Users\\BK\\bin\\mago\\current\\mago.exe",

	"markdown.preview.fontFamily": "'Noto Serif', system-ui, sans-serif",
	"markdown.preview.fontSize": 16,

	"outline.collapseItems": "alwaysCollapse",

	"php.executablePath": "C:\\Users\\BK\\scoop\\apps\\php\\current\\php.exe",
	"php.format.codeStyle": "WordPress",
	/* "php.version": "8.4", */

	"powershell.integratedConsole.showOnStartup": false,
	"powershell.promptToUpdatePowerShell": false,

	"prettier.printWidth": 800,
	"prettier.useTabs": true,

	"redhat.telemetry.enabled": false,

	"search.exclude": {
		"**/node_modules": true,
	},

	"scm.defaultViewMode": "tree",
	"scm.repositories.selectionMode": "single",

	"security.allowedUNCHosts": [
		"bk-desktop",
		"bk-laptop"
	],
	"security.workspace.trust.emptyWindow": false,
	"security.workspace.trust.enabled": false,
	"security.workspace.trust.untrustedFiles": "open",

	"telemetry.telemetryLevel": "off", // Disabled via Group policy

	"terminal.integrated.confirmOnExit": "hasChildProcesses",
	"terminal.integrated.confirmOnKill": "always",
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"terminal.integrated.fontFamily": "'FiraCode NF Retina', 'Fira Code Retina', 'Fira Code', Consolas, 'Courier New', monospace",
	"terminal.integrated.fontWeight": "normal",
	"terminal.integrated.lineHeight": 1.15,
	"terminal.integrated.persistentSessionReviveProcess": "never",
	"terminal.integrated.tabs.location": "left",
	
	"workbench.colorTheme": "Default Dark+",
	"workbench.editor.focusRecentEditorAfterClose": false,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.iconTheme": "vscode-icons",
	"workbench.secondarySideBar.defaultVisibility": "hidden",
	"workbench.tree.renderIndentGuides": "always",
	"workbench.view.alwaysShowHeaderActions": true,
}